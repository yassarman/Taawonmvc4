@using TaawonMVC.Web.Models.Common.Modals
@model TaawonMVC.Web.Models.Reporting.ReportingViewModel
@using ReportViewerForMvc;

@{
    ViewBag.Title = "ProjectRptView";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Projects Report</h2>

<form name="ProjectRpt" role="form" validate class="form-validation">
    <div class="row clearfix">
        <div class="col-sm-6">
            <div class="form-group form-float">
                <div class="form-line">
                    <span class="help-block text-muted small-font">Donor</span>
                    @Html.DropDownList("Donors", new SelectList(Model.Donors, "Id", "DonorName"), "Select Donor", htmlAttributes: new { @class = "form-control", @name = "donorId", @id = "donorId", @*@required = "true"*@})
                </div>
            </div>
        </div>
        <div class="col-sm-1">
            <div class="form-group form-float">
                <div class="form-line">
                    <span class="help-block text-muted small-font">Select</span>
                    @Html.RadioButton("CheckedYear", 0, new { id = "Year", @checked = true })
                    @Html.Label("Year", "Year")
                </div>
            </div>
        </div>
        <div class="col-sm-5">
            <div class="form-group form-float">
                <div class="form-line">
                    <span class="help-block text-muted small-font">Year</span>
                    <input class="validate form-control" type="text" name="year" id="year" @*required*@ placeholder="@L("Year")">
                </div>
            </div>
        </div>
    </div>
    <div class="row clearfix">
        <div class="col-sm-1">
            <div class="form-group form-float">
                <div class="form-line">
                    <span class="help-block text-muted small-font">Or</span>
                    @Html.RadioButton("CheckedYear", 1, new { id = "Between" })
                    @Html.Label("Between", "Between")
                </div>
            </div>
        </div>
        <div class="col-sm-5">
            <div class="form-group form-float">
                <div class="form-line">
                    <span class="help-block text-muted small-font">Year From</span>
                    <input class="validate form-control" type="text" name="YearFrom" id="YearFrom" @*required*@ placeholder="Year From">
                </div>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="form-group form-float">
                <div class="form-line">
                    <span class="help-block text-muted small-font">Year To</span>
                    <input class="validate form-control" type="text" name="YearTo" id="YearTo" @*required*@ placeholder="Year To">
                </div>
            </div>
        </div>
    </div>
    <div class="row clearfix">
        <div class="col-sm-6">
            <div class="form-group form-float">
                <div class="form-line">
                    <span class="help-block text-muted small-font">Budget</span>
                    <input class="validate form-control" type="text" name="Budget" id="Budget" @*required*@ placeholder="Budget">
                </div>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="form-group form-float">
                <div class="form-line">
                    <span class="help-block text-muted small-font">Contractor</span>
                    <input class="validate form-control" type="text" name="Contractor" id="Contractor" @*required*@ placeholder="Contractor">
                </div>
            </div>
        </div>
    </div>

    <div class="row clearfix">
        <div class="col-sm-6">
            <div class="form-group form-float">
                <div class="form-line">
                    <span class="help-block text-muted small-font">Location From Map</span>
                    <input class="validate form-control" type="text" name="locationFromMap" id="locationFromMap" @*required*@ placeholder="Location From Map">
                </div>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="form-group form-float">
                <div class="form-line">
                    <span class="help-block text-muted small-font">Project Period</span>
                    <input class="validate form-control" type="text" name="projectPeriod" id="projectPeriod" @*required*@ placeholder="Project Period">
                </div>
            </div>
        </div>
    </div>
    <div class="row clearfix">
        <div class="col-sm-6">
            <div class="form-group form-float">
                <div class="form-line">
                    <span class="help-block text-muted small-font">Name</span>
                    <input class="validate form-control" type="text" name="Name" id="Name" @*required*@ placeholder="Arabic Name Or English Name">
                </div>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="form-group form-float">
                <div class="form-line">
                    <span class="help-block text-muted small-font">Order By</span>
                    @Html.DropDownList("OrderBy", new SelectList(Model.OrderBy, "Value", "Text"), htmlAttributes: new { @class = "form-control", @name = "OrderbyId", @id = "OrderbyId", @*@required = "true"*@})
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" onclick="location.href='@Url.Action("ReportsListView", "Reporting")'" class="btn btn-primary waves-effect">@L("Cancel")</button>
        <button type="submit" formaction="@Url.Action("projectRpt", "Reporting")" class="btn btn-primary waves-effect">Call Report</button>
    </div>

    @if (ViewBag.ReportViewer != null)
    {
        @Html.ReportViewer(ViewBag.ReportViewer as Microsoft.Reporting.WebForms.ReportViewer)
    }
</form>




