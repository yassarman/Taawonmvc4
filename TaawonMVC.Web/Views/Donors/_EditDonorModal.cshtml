@using TaawonMVC.Web.Models.Common.Modals
@model TaawonMVC.Web.Models.Donors.DonorsViewModel
@{
    Layout = null;
}
@Html.Partial("~/Views/Shared/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(L("EditDonor")))

<div class="modal-body">
    <form name="DonorForm" role="form" novalidate class="form-validation">
        <input type="hidden" name="id" id="id" value="@Model.DonorOutput.Id" />
        <ul class="nav nav-tabs tab-nav-right" role="tablist">
            <li role="presentation" class="active"><a href="#edit-user-details" data-toggle="tab">Donor Details</a></li>
        </ul>
        <div class="tab-content">
            <div role="tabpanel" class="tab-pane animated fadeIn active" id="edit-user-details">
                <div class="row clearfix" style="margin-top:10px;">
                    <div class="col-sm-12">
                        <div class="form-group form-float">
                            <div class="form-line">
                                <span class="help-block text-muted small-font">@L("DonorName")</span>
                                <input id="donorName" type="text" name="donorName" value="@Model.DonorOutput.DonorName" required maxlength="255" minlength="2" class="validate form-control">
                                @*<label for="donorName" class="form-label">@L("DonorName")</label>*@
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

@Html.Partial("~/Views/Shared/Modals/_ModalFooterWithSaveAndCancel.cshtml")

<script src="~/Views/Donors/_EditDonorModal.js"></script>