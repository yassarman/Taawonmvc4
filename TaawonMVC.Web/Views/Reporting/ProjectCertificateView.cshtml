@using TaawonMVC.Web.Models.Common.Modals
@model TaawonMVC.Web.Models.Reporting.ReportingViewModel
@using ReportViewerForMvc;
@{
    ViewBag.Title = "ProjectCertificateView";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Project Certificate</h2>
<br/>

<form name="ProjectRpt" role="form" validate class="form-validation">
 
    <div class="row clearfix">
        <div class="col-sm-12">
            <div class="form-group form-float">
                <div class="form-line">
                    <span class="help-block text-muted small-font">Project Id</span>
                    <input class="validate form-control" type="text" name="Id" id="Id" required placeholder="Project Id">
                </div>
            </div>
        </div>
    </div>

    
    <div class="modal-footer">
        <button type="button" onclick="location.href='@Url.Action("ReportsListView", "Reporting")'" class="btn btn-primary waves-effect">@L("Cancel")</button>
        <button type="submit" formaction="@Url.Action("ProjectCertificateRpt", "Reporting")" class="btn btn-primary waves-effect">Call Report</button>
    </div>

    @if (ViewBag.ReportViewer != null)
    {
        @Html.ReportViewer(ViewBag.ReportViewer as Microsoft.Reporting.WebForms.ReportViewer)
    }
</form>

